// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ScheduleItem {
  id        String   @id @default(cuid())
  time      String
  date      String? // YYYY-MM-DD for one-time announcements
  type      String   @default("general") // general, lab_manual
  message   String
  language  String   @default("English")
  voice     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LogEntry {
  id        String   @id @default(cuid())
  timestamp String
  level     String
  message   String
  module    String
  createdAt DateTime @default(now())
}

model SystemState {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
